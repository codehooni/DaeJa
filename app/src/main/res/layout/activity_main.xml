<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:orientation="vertical"
    tools:context="com.skt.tmapsample.tmapview.MapDraw">

    <LinearLayout
        android:id="@+id/linearLayoutTmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <Button
            android:id="@+id/btn_open"
            android:layout_margin="10dp"
            android:background="@color/DaeJa_main"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:layout_toRightOf="@+id/btn_open">
            <SearchView
                android:id="@+id/searchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:queryHint="Search Here"
                android:iconifiedByDefault="false"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_recomend"
            android:layout_margin="10dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/reset" />

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/txt_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="단국대학교"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_search"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_above="@+id/ll_info"
            android:src="@drawable/search"/>

    </RelativeLayout>

    <include layout="@layout/activity_navigation"/>
</androidx.drawerlayout.widget.DrawerLayout>
